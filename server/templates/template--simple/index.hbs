<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{name}} — Portfolio</title>
  <link rel="stylesheet" href="assets/style.css">
</head>
<body>
  <div class="container">
    <header class="site-header">
      {{#if profileImage}}
      <div class="profile-image-wrapper" style="text-align: center; margin-bottom: 24px;">
        <img src="{{profileImage}}" alt="{{name}}" class="profile-image" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3); border: 4px solid #fff;" />
      </div>
      {{/if}}
      <h1>{{name}}</h1>
      <p class="role">{{role}}</p>
    </header>

    <div class="content">
      <section class="about">
        <h2>About</h2>
        <p>{{bio}}</p>
      </section>

      {{#if skills}}
      <section class="skills">
        <h2>Skills</h2>
        <ul>
          {{#each skills}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </section>
      {{/if}}

      {{#if projects}}
      <section class="projects">
        <h2>Projects</h2>
        {{#each projects}}
          <article class="project">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            {{#if link}}<a href="{{link}}" target="_blank">View Project →</a>{{/if}}
          </article>
        {{/each}}
      </section>
      {{/if}}
    </div>

    <footer class="contact">
      <h2>Contact</h2>
      {{#if contact.email}}<p>Email: <a href="mailto:{{contact.email}}">{{contact.email}}</a></p>{{/if}}
      {{#if contact.linkedin}}<p>LinkedIn: <a href="{{contact.linkedin}}" target="_blank">View Profile</a></p>{{/if}}
    </footer>
  </div>
</body>
</html>
