<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{name}} â€” Portfolio</title>
  <link rel="stylesheet" href="assets/style.css">
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <div class="profile">
        {{#if profileImage}}
        <div class="profile-image-wrapper" style="text-align: center; margin-bottom: 24px;">
          <img src="{{profileImage}}" alt="{{name}}" class="profile-image" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3); border: 4px solid #fff;" />
        </div>
        {{/if}}
        <h1 class="name">{{name}}</h1>
        <p class="role">{{role}}</p>
        <div class="bio">{{bio}}</div>
      </div>
      
      {{#if contact}}
      <div class="contact-section">
        <h3>Get in Touch</h3>
        {{#if contact.email}}
          <a href="mailto:{{contact.email}}" class="contact-link">ðŸ“§ {{contact.email}}</a>
        {{/if}}
        {{#if contact.linkedin}}
          <a href="{{contact.linkedin}}" target="_blank" class="contact-link">ðŸ’¼ LinkedIn</a>
        {{/if}}
      </div>
      {{/if}}
    </aside>

    <main class="content">
      {{#if skills}}
      <section class="skills-section">
        <h2 class="section-title">Skills & Expertise</h2>
        <div class="skills-grid">
          {{#each skills}}
            <span class="skill-tag">{{this}}</span>
          {{/each}}
        </div>
      </section>
      {{/if}}

      {{#if projects}}
      <section class="projects-section">
        <h2 class="section-title">Featured Projects</h2>
        <div class="projects-grid">
          {{#each projects}}
            <article class="project-card">
              <h3 class="project-title">{{title}}</h3>
              <p class="project-description">{{description}}</p>
              {{#if link}}
                <a href="{{link}}" target="_blank" class="project-link">View Project â†’</a>
              {{/if}}
            </article>
          {{/each}}
        </div>
      </section>
      {{/if}}
    </main>
  </div>
</body>
</html>
